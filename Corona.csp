	.EQU KEYBOARD_STATUS, $000; READ
	.EQU KEYBOARD_DATA, $001;   WRITE
	.EQU DUMP, $D00
	.EQU @, $CCC
PASSWORD:	.CHAR 'get pwned', CHAR_LENGTH;
	.EQU @, $000
	LDX# 0
	LDA# 0
POLL_KEYBD:	INB KEYBOARD_STATUS
	NOP
	JGE POLL_KEYBD;	LT SET WHEN THERE IS NO DATA
WRITE:	INB KEYBOARD_DATA
	STA+ DUMP
	ADX# 1
	CMA# 'd'
	JEQ CONFIRM
	JMP WRITE
	
CONFIRM:	TXA
	CMA CHAR_LENGTH
	JLT WRITE
	SBA CHAR_LENGTH
	TAX		
	LDA+ DUMP	
	ADX# 1
	CMA 'g'
	
ERASE:	LDX# 0
	CLR+ $000
	AOC# 50
	JLT ERASE
	.END
	